@model PWProject.Models.Product

<div class="form-group">
    <label asp-for="Name" class="control-label"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label"></label>
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Producer" class="control-label"></label>
    <select asp-for="ProducerId" class="form-control" asp-items="ViewBag.Producers" name="ProducerId"></select>
</div>
<div class="form-group">
    <label asp-for="AlcoholType" class="control-label"></label>
    <select asp-for="AlcoholType" class="form-control" asp-items="Html.GetEnumSelectList<AlcoholType>()">
    </select>
    <span asp-validation-for="AlcoholType" class="text-danger"></span>
</div>
<div class="form-group">
    <input type="submit" value="Save" class="btn btn-primary" />
</div>